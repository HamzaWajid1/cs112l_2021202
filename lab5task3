#include<iostream>
using namespace std;
class stringtype
{
private:
	string stri1;
	string stri2;
public:

	stringtype()
	{
		stri1 = " ";
	stri2 = " ";
	}
	
	void setvalue(string str1,string str2)
	{
		stri1 = str1;
		stri2 = str2;


	}
