	{
		char s3[50];
		int j = 0;
			int i = 0;
			while (s1[i] != '\0')
			{
				s3[j] = s1[i];
				j++;
				i++;
		}
			//s1[i] = '\0';
			int k = 0;
			while (s2[k] != '\0')
			{
				s3[j] = s2[k];
				//j++;
				k++;
				j++;
			}
			s3[j] = '\0';
			return s3;
	}
