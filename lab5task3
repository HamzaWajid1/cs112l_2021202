		cout << "string 1 is " << stri1;
		cout << "string 2 is " << stri2;
	}
	int maxlength()
	{
		int i = 0;
		while (stri1[i] != '\0')
		{
			i++;
		}
		int j = 0;
		while (stri2[j] != '\0')
		{
			j++;
		}
		if (i > j)
		{
			
			return i;
		}
		else
		{
			return j;
		}
	}
	int compare(string s1, string s2)
	{
		int a;
		int count = 0;
		int i = 0;
		while (s1[i] != '\0' || s2[i] != '\0')
		{
			if (s1[i] > s2[i])
			{
				count++;
				break;
}
			else if (s1[i] < s2[i])
			{
				count--;
				break;
			}
			else if (s1[i] != '\0' && s2[i] == '\0')
			{
				count++;
				break;
			}
			else if (s2[i] != '\0' && s1[i] == '\0')
			{
				count--;
				break;
			}
			else
			{
				break;
			}
			i++;
		}
		return count;
		
	}
	void copy(string sourse,string destination)

	{
		int i = 0;
		while (sourse[i] != '\0')
		{
			destination[i] = sourse[i];
			i++;
			
		}
		
		destination[i] = '\0';
		cout<< destination;
	}
